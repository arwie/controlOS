MC="mc@mc"
MCROOT="root@mc"

CONF=/usr/lib/mc/conf
APPSRC=/usr/lib/mc/app
APP=/tmp/mc-app

PHP="php5 -n -d display_errors=stderr"
SSH="ssh"
SCP="scp -r -q"

md5hash() {
	find $1 -type f -exec cat {} + | md5sum | cut -d ' ' -f 1
}

debug() { echo "$1" 1>&2; }

errexit() {
	debug "ERROR: $1"
	exit 1
}



MC_CONFHASH=$($SSH $MCROOT "cat conf.hash || echo 0")					|| errexit "failed to connect to $MCROOT"
CONFHASH=$(md5hash $CONF)

if [ "$MC_CONFHASH" != "$CONFHASH" ]; then	# copy configuration files
	$SSH $MCROOT "mount -o remount,rw /"								|| errexit "remount rw rootfs on mc"
	$SCP $CONF/* $MCROOT:/												|| errexit "copy configuration files to mc"
	$SSH $MCROOT "echo $CONFHASH > conf.hash"							|| errexit "update conf.hash on mc"
	REBOOT=yes
	echo "copied configuration files to mc"
fi


# build application php files
mkdir -p $APP															|| errexit "mkdir $APP"
cd $APPSRC
$PHP main.php $APP														|| errexit "build application files"


MC_APPHASH=$($SSH $MC "cat app.hash || echo 0")							|| errexit "failed to connect to $MC"
APPHASH=$(md5hash $APP)

if [ "$MC_APPHASH" != "$APPHASH" ]; then	# copy app files
	$SCP $APP/* $MC:/FFS0/												|| errexit "copy application files to mc"
	$SSH $MC "echo $APPHASH > app.hash"									|| errexit "update app.hash on mc"
	REBOOT=yes
	echo "copied application files to mc"
fi


# reboot if necessary
if [ -n "$REBOOT" ]; then
	$SSH $MC "sudo reboot"												|| errexit "reboot mc"
	echo "mc updated successfully"
else
	echo "mc is up to date"
fi


exit 0
