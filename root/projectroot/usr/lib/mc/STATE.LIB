dim shared stateWatchdogIntervalMs as const long	= 1000

dim shared this_udpBeacon as long



<?lib_init()?>
	<?com_open('this_udpBeacon', 'udp', function() {?>
		call com_putString("/send/address", "<?=gethostbyname('sys')?>")
		call com_putLong("/send/port", 33000)
	<?})?> 
	<?com_openWebsocket('state_websocket', 33000, ['receive'=>'false'])?>
end sub


<?lib_stop()?>
	call sendState
	sleep 500
end sub



<?com_prgReceive('state_websocket', 'stateWatchdogIntervalMs', 14)?>
	select case receive_
	case com_receiveTimeout
		call sendWatchdog
	case else
		call sendState
	end select
end sub


<?lib_prgError()?>
end sub



sub sendState
	call com_clear
	call com_send(this_udpBeacon)
<?
	foreach (get('libs')['all'] as $l) 
		ll('call com_putBool("/'.$l['name'].'", '.$l['name'].'_started)')
?>
	call com_send(state_websocket)
end sub


sub sendWatchdog
	call com_clear
	call com_send(this_udpBeacon)
	call com_send(state_websocket)
end sub
