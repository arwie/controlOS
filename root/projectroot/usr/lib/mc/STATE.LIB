<?common('websocket')?>

dim shared stateWatchdogIntervalMs as const long	= 1000



<?lib_init()?>
<?	libComOpenServerWebsocket('state_websocket', 33000, ['bool("/receive", false)'])?>
end sub


<?lib_stop()?>
	call sendState
	sleep 500
end sub



<?lib_prgLoop(14)?>
	select case com_receive(state_websocket, stateWatchdogIntervalMs)
	case com_receiveTimeout
		call sendWatchdog
	case else
		call sendState
	end select
end sub



sub sendState
	call com_clear
<?
	foreach (get('libs')['all'] as $l) 
		ll('call com_putBool("/'.$l['name'].'", '.$l['name'].'_started)')
?>
	call com_send(state_websocket)
end sub


sub sendWatchdog
	call com_clear
	call com_send(state_websocket)
end sub
